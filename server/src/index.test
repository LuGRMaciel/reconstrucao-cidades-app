
import request from 'supertest';
import app from './index';

describe('API basic flow', () => {
  let locationId = '';
  let requestId = '';

  it('creates a location', async () => {
    const res = await request(app).post('/locations').send({ name: 'Ponte Central', description: 'Área alagada' });
    expect(res.status).toBe(201);
    expect(res.body.id).toBeDefined();
    locationId = res.body.id;
  });

  it('lists locations', async () => {
    const res = await request(app).get('/locations');
    expect(res.status).toBe(200);
    expect(Array.isArray(res.body)).toBe(true);
  });

  it('creates a help request', async () => {
    const res = await request(app).post('/requests').send({ type: 'MATERIAL', description: 'Precisamos de água', createdBy: 'luana', locationId });
    expect(res.status).toBe(201);
    expect(res.body.status).toBe('OPEN');
    requestId = res.body.id;
  });

  it('updates request status', async () => {
    const res = await request(app).patch(`/requests/${requestId}/status`).send({ status: 'IN_PROGRESS' });
    expect(res.status).toBe(200);
    expect(res.body.status).toBe('IN_PROGRESS');
  });

  it('creates and lists offers', async () => {
    const created = await request(app).post('/offers').send({ type: 'VOLUNTEER', description: 'Tenho caminhão', offeredBy: 'joao', locationId });
    expect(created.status).toBe(201);
    const list = await request(app).get('/offers');
    expect(list.status).toBe(200);
    expect(Array.isArray(list.body)).toBe(true);
  });

  it('rejects invalid weather request', async () => {
    const res = await request(app).get('/public/weather');
    expect(res.status).toBe(400);
  });
});
